<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room - Chat App</title>
    <script src="/socket.io/socket.io.js"></script>
    <script src="room.js" defer></script>
    <link rel="stylesheet" href="room.css">
</head>
<body>
    <div class="chat-area">
      <div class="messaging-section">
          <div class="active-typers"></div>
      </div>
      <form class="text-controls">
          <input type="text" class="display-name" placeholder="Display Name">
          <div class="message-div">
              <input type="text" class="text-message" placeholder="Type a Message...">
              <input type="submit" class="send-button" value="send">
          </div>
      </form>
    </div>
    <script>
        const ROOMID = "<%=roomId%>";
        const USERID = "<%=userId%>";
    </script>
</body>
</html>